<!doctype html>
<html>

  <head>
    <title>Vending</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
  </head>

  <body>
    <div class="container">

      <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Admin Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
      </div>

      <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
          <div class="well">
            <h3><span class="fa fa-user"></span> Local</h3>

            <% if (user.local.email) { %>
              <p>
                <strong>id</strong>:
                <%= user._id %><br>
                  <strong>email</strong>:
                  <%= user.local.email %><br>
                    <strong>password</strong>:
                    <%= user.local.password %>
              </p>

              <a href="/unlink/local" class="btn btn-default">Unlink</a>
              <% } else { %>
                <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

          </div>
        </div>
        <div class="col-sm-6">
          <h2>Items</h2>
          <ul class="items">
            <% for(var i=0; i<items.length; i++) {%>
              <li class="message">
                <span><%= items[i].name %></span>
                <span><%= items[i].num %></span>
                <span><%= items[i].count %></span>
                <span><%= items[i].revenue %></span>
              </li>
              <% } %>
          </ul>

          <h3>Add Items</h3>
          <form action="/items" method="POST">
            <input type="text" placeholder="Item Name" name="name">
            <input type="text" placeholder="Item Number" name="num">
            <input type="text" placeholder="In Stock" name="num">
            <button type="submit">Submit</button>
          </form>
        </div>

      </div>

  </body>

</html>